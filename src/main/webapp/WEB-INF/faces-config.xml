<?xml version="1.0"?>
<faces-config version="2.2"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<application>
		<message-bundle>de.htw_berlin.tpro.messages_de</message-bundle>
		<resource-handler>org.omnifaces.resourcehandler.UnmappedResourceHandler</resource-handler>
	</application>
	
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginMB.login}</from-action>
	        <from-outcome>user</from-outcome>
	        <to-view-id>/user/userDashboard.xhtml</to-view-id>
	        <redirect />
	    </navigation-case>
		<navigation-case>
			<from-action>#{loginMB.login}</from-action>
	        <from-outcome>admin</from-outcome>
	        <to-view-id>/admin/adminDashboard.xhtml</to-view-id>
	        <redirect />
	    </navigation-case>
		<navigation-case>
			<from-action>#{loginMB.signUp}</from-action>
	        <from-outcome>success</from-outcome>
	        <to-view-id>/user/userDashboard.xhtml</to-view-id>
	        <redirect />
	    </navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/user/userDashboard.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginMB.logout}</from-action>
	        <from-outcome>success</from-outcome>
	        <to-view-id>/index.xhtml</to-view-id>
	        <redirect />
	    </navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/admin/adminDashboard.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginMB.logout}</from-action>
	        <from-outcome>success</from-outcome>
	        <to-view-id>/index.xhtml</to-view-id>
	        <redirect />
	    </navigation-case>
	</navigation-rule>
</faces-config>
